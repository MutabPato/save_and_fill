{
    "manifest_version": 3,
    "name": "Save and Fill",
    "version": "0.1.0",
    "description": "Presave text and fill on a different webpage",
    "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
}
